<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieCatalogue" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_pastel_3</item>
        <item name="colorPrimaryVariant">@color/orange_pastel_2</item>
        <item name="colorOnPrimary">@color/orange_50</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_pastel_1</item>
        <item name="colorSecondaryVariant">@color/placeholder</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MovieCatalogue.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MovieCatalogue.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>


</resources>